{% extends 'base.html.twig' %}

{% block title %}SubCategory index{% endblock %}

{% block body %}
<div class="container">
<div class="row">
<div class="col-md-6">

    <h1>SubCategory index</h1>

    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Category</th>
                <th>Slug</th>
                <th>Brochure</th>
                <th>ImageUrl</th>
                <th>CreateDate</th>
                <th>Products</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sub_category in sub_categories %}
            <tr>
                <td>{{ sub_category.id }}</td>
                <td>{{ sub_category.category }}</td>
                <td>{{ sub_category.slug }}</td>
                <td>{{ sub_category.brochure }}</td>
                <td>{{ sub_category.imageUrl }}</td>
                <td>{{ sub_category.createDate ? sub_category.createDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ sub_category.products }}</td>
                <td>
                <div id="conteneur">
                    <a href="{{ path('sub_category_show', {'id': sub_category.id}) }}"class="btn btn-success">show</a>
                    <a href="{{ path('sub_category_edit', {'id': sub_category.id}) }}"class="btn btn-info">edit</a></div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('sub_category_new') }}"class="btn btn-lg">Create new</a>
    </div></div></div>
{% endblock %}
