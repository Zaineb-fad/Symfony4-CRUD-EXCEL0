{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
<div class="container">
<div class="row">
<div class="col-md-6">

    <h1>Category index</h1>

    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Slug</th>
                <th>Brochure</th>
                <th>ImageUrl</th>
                <th>CreateDate</th>
                <th>Products</th>
                <th>SubCategories</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.slug }}</td>
                <td>{{ category.brochure }}</td>
                <td>{{ category.imageUrl }}</td>
                <td>{{ category.createDate ? category.createDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ category.products }}</td>
                <td>{{ category.subCategories }}</td>
                <td>
                <div id="conteneur">
                    <a href="{{ path('category_show', {'id': category.id}) }}"class="btn btn-success">show</a>
                    <a href="{{ path('category_edit', {'id': category.id}) }}"class="btn btn-info">edit</a></div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('category_new') }}"class="btn btn-lg">Create new</a>
    </div></div></div>
{% endblock %}
