{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
<div class="container">
<div class="row">
<div class="col-md-6">

    <h1>Category</h1>

    <table class="table table-condensed">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ category.slug }}</td>
            </tr>
            <tr>
                <th>Brochure</th>
                <td>{{ category.brochure }}</td>
            </tr>
            <tr>
                <th>ImageUrl</th>
                <td>{{ category.imageUrl }}</td>
            </tr>
            <tr>
                <th>CreateDate</th>
                <td>{{ category.createDate ? category.createDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Products</th>
                <td>{{ category.products }}</td>
            </tr>
            <tr>
                <th>SubCategories</th>
                <td>{{ category.subCategories }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('category_index') }}">back to list</a>

    <a href="{{ path('category_edit', {'id': category.id}) }}">edit</a>

    {{ include('category/_delete_form.html.twig') }}
    </div></div></div>
{% endblock %}
