{% extends 'base.html.twig' %}

{% block title %}Section index{% endblock %}

{% block body %}
<div class="container">
<div class="row">
<div class="col-md-6">

    <h1>Section index</h1>

    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>City</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for section in sections %}
            <tr>
                <td>{{ section.id }}</td>
                <td>{{ section.name }}</td>
                <td>{{ section.city }}</td>
                <td>
                    <a href="{{ path('section_show', {'id': section.id}) }}"class="btn btn-success">show</a>
                    <a href="{{ path('section_edit', {'id': section.id}) }}"class="btn btn-info">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('section_new') }}"class="btn btn-lg">Create new</a>
    </div></div></div>
{% endblock %}
