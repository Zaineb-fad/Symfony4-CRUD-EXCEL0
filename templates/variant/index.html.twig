{% extends 'base.html.twig' %}

{% block title %}Variant index{% endblock %}

{% block body %}
<div class="container">
<div class="row">
<div class="col-md-6">

    <h1>Variant index</h1>

    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Size</th>
                <th>Price</th>
                <th>OldPrice</th>
                <th>Product</th>
                <th>Sort</th>
                <th>CartLines</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for variant in variants %}
            <tr>
                <td>{{ variant.id }}</td>
                <td>{{ variant.size }}</td>
                <td>{{ variant.price }}</td>
                <td>{{ variant.oldPrice }}</td>
                <td>{{ variant.product }}</td>
                <td>{{ variant.sort }}</td>
                <td>{{ variant.cartLines }}</td>
                <td>
                    <a href="{{ path('variant_show', {'id': variant.id}) }}"class="btn btn-success">show</a>
                    <a href="{{ path('variant_edit', {'id': variant.id}) }}"class="btn btn-info">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('variant_new') }}"class="btn btn-lg">Create new</a>
    </div></div></div>
{% endblock %}
