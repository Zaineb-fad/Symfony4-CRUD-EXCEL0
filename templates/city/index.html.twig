{% extends 'base.html.twig' %}

{% block title %}City index{% endblock %}

{% block body %}
<div class="container">
<div class="row">
<div class="col-md-6">

    <h1>City index</h1>

    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Country</th>
                <th>Orders</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for city in cities %}
            <tr>
                <td>{{ city.id }}</td>
                <td>{{ city.country }}</td>
                <td>{{ city.orders }}</td>
                <td>
                 <div id="conteneur">
                    <a href="{{ path('city_show', {'id': city.id}) }}"class="btn btn-success">show</a>
