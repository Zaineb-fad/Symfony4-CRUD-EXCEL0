{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
<div class="container">
<div class="row">
<div class="col-md-6">

    <h1>Product index</h1>

    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Slug</th>
                <th>Description</th>
                <th>Price</th>
                <th>OldPrice</th>
                <th>Category</th>
                <th>Images</th>
                <th>CreateAt</th>
                <th>Variants</th>
                <th>SubCategory</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.slug }}</td>
                <td>{{ product.description }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.oldPrice }}</td>
                <td>{{ product.category }}</td>
                <td>{{ product.images }}</td>
                <td>{{ product.createAt ? product.createAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ product.variants }}</td>
                <td>{{ product.subCategory }}</td>
                <td>
                <div id="conteneur">
                    <a href="{{ path('product_show', {'id': product.id}) }}"class="btn btn-success">show</a>
                    <a href="{{ path('product_edit', {'id': product.id}) }}"class="btn btn-info">edit</a></div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('product_new') }}"class="btn btn-lg">Create new</a>
    </div></div></div>
{% endblock %}
