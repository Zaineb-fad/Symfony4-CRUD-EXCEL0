{% extends 'base.html.twig' %}

{% block title %}Cart index{% endblock %}

{% block body %}
<div class="container">
<div class="row">
<div class="col-md-6">

    <h1>Cart index</h1>

    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>CartLines</th>
                <th>OrderCart</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cart in carts %}
            <tr>
                <td>{{ cart.id }}</td>
                <td>{{ cart.cartLines }}</td>
                <td>{{ cart.orderCart }}</td>
                <td>
                    <a href="{{ path('cart_show', {'id': cart.id}) }}"class="btn btn-success">show</a>
                    <a href="{{ path('cart_edit', {'id': cart.id}) }}"class="btn btn-info">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('cart_new') }}"class="btn btn-lg">Create new</a>
    </div></div></div>
{% endblock %}
