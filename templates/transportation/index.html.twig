{% extends 'base.html.twig' %}

{% block title %}Transportation index{% endblock %}

{% block body %}
<div class="container">
<div class="row">
<div class="col-md-6">

    <h1>Transportation index</h1>

    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Color</th>
                <th>LicencePlate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for transportation in transportations %}
            <tr>
                <td>{{ transportation.id }}</td>
                <td>{{ transportation.color }}</td>
                <td>{{ transportation.licencePlate }}</td>
                <td>
                    <a href="{{ path('transportation_show', {'id': transportation.id}) }}"class="btn btn-success">show</a>
                    <a href="{{ path('transportation_edit', {'id': transportation.id}) }}"class="btn btn-info">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('transportation_new') }}"class="btn btn-lg">Create new</a>
    </div></div></div>
{% endblock %}
