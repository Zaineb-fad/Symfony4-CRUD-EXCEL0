{% extends 'base.html.twig' %}

{% block title %}Reviews index{% endblock %}

{% block body %}
<div class="container">
<div class="row">
<div class="col-md-6">

    <h1>Reviews index</h1>

    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Stars</th>
                <th>Comment</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for review in reviews %}
            <tr>
                <td>{{ review.id }}</td>
                <td>{{ review.name }}</td>
                <td>{{ review.stars }}</td>
                <td>{{ review.comment }}</td>
                <td>
                    <a href="{{ path('reviews_show', {'id': review.id}) }}"class="btn btn-success">show</a>
                    <a href="{{ path('reviews_edit', {'id': review.id}) }}"class="btn btn-info">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('reviews_new') }}"class="btn btn-lg">Create new</a>
    </div></div></div>
{% endblock %}
