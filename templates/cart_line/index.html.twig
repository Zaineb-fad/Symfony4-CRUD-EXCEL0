{% extends 'base.html.twig' %}

{% block title %}CartLine index{% endblock %}

{% block body %}
<div class="container">
<div class="row">
<div class="col-md-6">

    <h1>CartLine index</h1>

    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Quantity</th>
                <th>Variant</th>
                <th>Cart</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cart_line in cart_lines %}
            <tr>
                <td>{{ cart_line.id }}</td>
                <td>{{ cart_line.quantity }}</td>
                <td>{{ cart_line.variant }}</td>
                <td>{{ cart_line.cart }}</td>
                <td>
                    <a href="{{ path('cart_line_show', {'id': cart_line.id}) }}">show</a>
                    <a href="{{ path('cart_line_edit', {'id': cart_line.id}) }}">edit</a>
                </td>
            </tr>
