{% extends 'base.html.twig' %}

{% block title %}Follower index{% endblock %}

{% block body %}
<div class="container">
<div class="row">
<div class="col-md-6">

    <h1>Follower index</h1>

    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for follower in followers %}
            <tr>
                <td>{{ follower.id }}</td>
                <td>{{ follower.name }}</td>
                <td>
                    <a href="{{ path('follower_show', {'id': follower.id}) }}"class="btn btn-success">show</a>
                    <a href="{{ path('follower_edit', {'id': follower.id}) }}"class="btn btn-info">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('follower_new') }}"class="btn btn-lg">Create new</a></div></div></div>
{% endblock %}
