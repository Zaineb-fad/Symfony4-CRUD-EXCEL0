{% extends 'base.html.twig' %}

{% block title %}SponsoredRestaurant index{% endblock %}

{% block body %}
<div class="container">
<div class="row">
<div class="col-md-6">

    <h1>SponsoredRestaurant index</h1>

    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>StartDate</th>
                <th>EndDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sponsored_restaurant in sponsored_restaurants %}
            <tr>
                <td>{{ sponsored_restaurant.id }}</td>
                <td>{{ sponsored_restaurant.name }}</td>
                <td>{{ sponsored_restaurant.startDate ? sponsored_restaurant.startDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ sponsored_restaurant.endDate ? sponsored_restaurant.endDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('sponsored_restaurant_show', {'id': sponsored_restaurant.id}) }}"class="btn btn-success">show</a>
                    <a href="{{ path('sponsored_restaurant_edit', {'id': sponsored_restaurant.id}) }}"class="btn btn-info">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('sponsored_restaurant_new') }}"class=btn btn-lg>Create new</a>
    </div></div></div>
{% endblock %}
