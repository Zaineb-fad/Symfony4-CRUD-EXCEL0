{% extends 'base.html.twig' %}

{% block title %}StatusHistory index{% endblock %}

{% block body %}
<div class="container">
<div class="row">
<div class="col-md-6">

    <h1>StatusHistory index</h1>

    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Status</th>
                <th>StatusDate</th>
                <th>StatusOrder</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for status_history in status_histories %}
            <tr>
                <td>{{ status_history.id }}</td>
                <td>{{ status_history.status }}</td>
                <td>{{ status_history.statusDate ? status_history.statusDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ status_history.statusOrder }}</td>
                <td>
                    <a href="{{ path('status_history_show', {'id': status_history.id}) }}"class="btn btn-success">show</a>
                    <a href="{{ path('status_history_edit', {'id': status_history.id}) }}"class="btn btn-info">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('status_history_new') }}"class="btn btn-lg">Create new</a>
    </div></div></div>
{% endblock %}
