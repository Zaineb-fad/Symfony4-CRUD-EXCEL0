{% extends 'base.html.twig' %}

{% block title %}Gallery index{% endblock %}

{% block body %}
<div class="container">
<div class="row">
<div class="col-md-6">

    <h1>Gallery index</h1>

    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th>Images</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for gallery in galleries %}
            <tr>
                <td>{{ gallery.id }}</td>
                <td>{{ gallery.images }}</td>
                <td>
                    <a href="{{ path('gallery_show', {'id': gallery.id}) }}"class="btn btn-success">show</a>
                    <a href="{{ path('gallery_edit', {'id': gallery.id}) }}"class="btn btn-info">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('gallery_new') }}"class="btn btn-lg">Create new</a></div></div></div>
{% endblock %}
